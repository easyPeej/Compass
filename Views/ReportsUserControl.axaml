<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Compass.Views;assembly=Compass"
             xmlns:vm="clr-namespace:Compass.ViewModels"
             x:DataType="vm:ReportsViewModel"
             x:Class="Compass.Views.ReportsUserControl">
    
    <StackPanel>
        <TextBlock Text="Safeguarding Reports" FontSize="20" Margin="10" />
        
        <ListBox ItemsSource="{Binding FullReport}" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding concern_description}" />
                        <TextBlock Text="{Binding status}" />
                        <TextBlock Text="{Binding date_reported}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
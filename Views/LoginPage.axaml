<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="450"
             x:Class="Compass.Views.LoginPage">
    
    <Canvas Width="400" Height="400">
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Width="250">
            <StackPanel Margin="10" RenderTransformOrigin="0.5, 0.5">
                <TextBlock Text="User Login" Margin="10" HorizontalAlignment="Center"/>
                <TextBlock Text="Username" Margin="5, 10, 5, 1"/>
                <TextBox Name="Username" DataContext="Username" />
                <TextBlock Text="Password"  Margin="5, 10, 5, 1"/>
                <TextBox Name="Pwd" DataContext="Pwd"/>
                <Button Content="Login" HorizontalAlignment="Center" Margin="5"></Button>
            </StackPanel>
        </Border>
    </Canvas>
    
</UserControl>
